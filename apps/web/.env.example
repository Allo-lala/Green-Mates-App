# Copy this file to .env and fill in your own values

# MetaMask WalletConnect Configuration
WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here

# Backend API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT_SECONDS=30

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/grinmates_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=grinmates_db
DB_USER=grinmates_user
DB_PASSWORD=your_secure_password_here

# Blockchain Configuration
CELO_RPC_URL=https://forno.celo.org
CELO_NETWORK=mainnet

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
# SESSION_TIMEOUT_MINUTES=60